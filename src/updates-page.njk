---
layout: base.njk
title: All Updates
permalink: /updates/
---

<section class="snap-section overflow-section" id="all-updates" aria-label="All Updates">
  <div class="section-inner">
    <div class="section-header">
      <span class="section-tag">News & Activity</span>
      <h2 class="section-title">All Updates</h2>
    </div>

    <div class="updates-card updates-card--full">
      <ul class="updates-list updates-list--full">
        {% for item in updates %}
        <li class="update-item">
          <time class="update-date" datetime="{{ item.date }}">
            {% set d = item.date %}
            {{ item.date | dateDisplay }}
          </time>
          <div class="update-body">
            <span class="update-title">{{ item.title }}</span>
            {% if item.description %}
            <p class="update-desc">{{ item.description | markdownify | safe }}</p>
            {% endif %}
          </div>
        </li>
        {% else %}
        <li class="update-item">
          <span class="update-title">No updates yet.</span>
        </li>
        {% endfor %}
      </ul>

      <div class="updates-back">
        <a href="/" class="btn btn-ghost">‚Üê Back to Home</a>
      </div>
    </div>
  </div>
</section>
