<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="{{ site.description }}" />
  <meta name="keywords" content="{{ site.keywords }}" />
  <meta name="author" content="{{ site.author }}" />
  <title>{% if title %}{{ title }} – {% endif %}{{ site.title }}</title>

  <!-- Open Graph -->
  <meta property="og:title" content="{{ site.title }}" />
  <meta property="og:description" content="{{ site.description }}" />
  <meta property="og:type" content="website" />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:ital,wght@0,700;1,600&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="{{ '/css/style.css' | url }}" />
</head>
<body>

  <!-- ═══════════════════════════════════════════════
       RIGHT-SIDE VERTICAL NAVIGATION
  ═══════════════════════════════════════════════ -->
  <nav id="side-nav" aria-label="Section navigation">
    <ul>
      <li>
        <a href="#home" class="nav-dot active" data-section="home" aria-label="Home">
          <span class="dot"></span>
          <span class="label">Home</span>
        </a>
      </li>
      <li>
        <a href="#education" class="nav-dot" data-section="education" aria-label="Education">
          <span class="dot"></span>
          <span class="label">Education</span>
        </a>
      </li>
      <li>
        <a href="#experience" class="nav-dot" data-section="experience" aria-label="Experience">
          <span class="dot"></span>
          <span class="label">Experience</span>
        </a>
      </li>
      <li>
        <a href="#publications" class="nav-dot" data-section="publications" aria-label="Publications">
          <span class="dot"></span>
          <span class="label">Publications</span>
        </a>
      </li>
      <li>
        <a href="#contact" class="nav-dot" data-section="contact" aria-label="Contact">
          <span class="dot"></span>
          <span class="label">Contact</span>
        </a>
      </li>
      <li>
        <a href="#gallery" class="nav-dot" data-section="gallery" aria-label="Gallery">
          <span class="dot"></span>
          <span class="label">Gallery</span>
        </a>
      </li>
    </ul>
  </nav>

  <!-- ═══════════════════════════════════════════════
       HAMBURGER MENU (mobile)
  ═══════════════════════════════════════════════ -->
  <button id="hamburger" aria-label="Open navigation menu" aria-expanded="false">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <!-- Mobile nav drawer -->
  <div id="mobile-nav" role="dialog" aria-modal="true" aria-label="Navigation menu">
    <button id="mobile-nav-close" aria-label="Close navigation">&times;</button>
    <ul>
      <li><a href="#home" class="mobile-nav-link">Home</a></li>
      <li><a href="#education" class="mobile-nav-link">Education</a></li>
      <li><a href="#experience" class="mobile-nav-link">Experience</a></li>
      <li><a href="#publications" class="mobile-nav-link">Publications &amp; Awards</a></li>
      <li><a href="#contact" class="mobile-nav-link">Contact</a></li>
      <li><a href="#gallery" class="mobile-nav-link">Gallery</a></li>
    </ul>
  </div>
  <div id="mobile-overlay"></div>

  <!-- ═══════════════════════════════════════════════
       SNAP SCROLL CONTAINER
  ═══════════════════════════════════════════════ -->
  <main id="snap-container">
    {{ content | safe }}
  </main>

  <!-- Lightbox overlay -->
  <div id="lightbox" role="dialog" aria-modal="true" aria-label="Image viewer">
    <button id="lightbox-close" aria-label="Close image">&times;</button>
    <button id="lightbox-prev" aria-label="Previous image">&#10094;</button>
    <button id="lightbox-next" aria-label="Next image">&#10095;</button>
    <div id="lightbox-img-wrap">
      <img id="lightbox-img" src="" alt="" />
      <p id="lightbox-caption"></p>
    </div>
  </div>

  <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>
