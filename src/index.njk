<section class="snap-section overflow-section" id="publications" aria-label="Publications Presentations and Awards">
  <div class="section-inner">
    <div class="section-header">
      <span class="section-tag">Scholarship</span>
      <h2 class="section-title">Publications, Presentations &amp; Awards</h2>
    </div>

    <div class="pub-awards-grid">

      <!-- Publications -->
      <div class="pub-col">
        <h3 class="col-heading">ğŸ“„ Publications</h3>
        <div class="pub-list">
          {% for pub in publications %}
          <div class="pub-card">
            <span class="pub-status pub-status--{{ pub.status | lower | replace(' ', '-') }}">{{ pub.status }}</span>
            <h4 class="pub-title">
              {% if pub.url %}
              <a href="{{ pub.url }}" target="_blank" rel="noopener">{{ pub.title }}</a>
              {% else %}
              {{ pub.title }}
              {% endif %}
            </h4>
            <p class="pub-meta">
              <em>{{ pub.journal }}</em>
              {% if pub.year %} Â· {{ pub.year }}{% endif %}
            </p>
            {% if pub.authors %}<p class="pub-authors">{{ pub.authors }}</p>{% endif %}
          </div>
          {% endfor %}
        </div>

        <h3 class="col-heading" style="margin-top:2.5rem;">ğŸ¤ Presentations</h3>
        <div class="pres-list">
          {% for pres in presentations %}
          <div class="pres-item">
            <time class="pres-date">{{ pres.date | dateDisplay }}</time>
            <div>
              <p class="pres-title">{{ pres.title }}</p>
              <p class="pres-event">{{ pres.event }}{% if pres.location %} Â· {{ pres.location }}{% endif %}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!-- Awards -->
      <div class="awards-col">
        <h3 class="col-heading">ğŸ† Awards &amp; Honors</h3>
        <div class="awards-list">
          {% for award in awards %}
          <div class="award-card">
            <div class="award-year">{{ award.year }}</div>
            <div class="award-body">
              <h4 class="award-title">{{ award.title }}</h4>
              <p class="award-org">{{ award.org }}</p>
              {% if award.description %}
              <div class="award-desc">{{ award.description | markdownify | safe }}</div>
              {% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</section>


