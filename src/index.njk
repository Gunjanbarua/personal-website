<section class="snap-section overflow-section" id="education" aria-label="Education and Skills">
  <div class="section-inner">
    <div class="section-header">
      <span class="section-tag">Academic Background</span>
      <h2 class="section-title">Education &amp; Technical Skills</h2>
    </div>

    <div class="edu-skills-grid">
      <!-- Education -->
      <div class="edu-col">
        <h3 class="col-heading">Education</h3>
        <div class="edu-timeline">
          {% for edu in education %}
          <div class="edu-item">
            <div class="edu-icon">{{ edu.icon }}</div>
            <div class="edu-content">
              <h4 class="edu-degree">{{ edu.degree }}</h4>
              <p class="edu-inst">{{ edu.institution }} <span class="edu-loc">Â· {{ edu.location }}</span></p>
              <p class="edu-period">{{ edu.period }}</p>
              {% if edu.dissertation %}
              <p class="edu-diss"><em>Dissertation:</em> {{ edu.dissertation | safe }}</p>
              {% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!-- Skills -->
      <div class="skills-col">
        <h3 class="col-heading">Technical Skills</h3>
        <div class="skills-groups">
          {% for group in skills.groups %}
          <div class="skill-group">
            <h4 class="skill-group-title">
              <span class="skill-icon">{{ group.icon }}</span>
              {{ group.category }}
            </h4>
            <div class="skill-tags">
              {% for item in group.items %}
              <span class="skill-tag">{{ item }}</span>
              {% endfor %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>


