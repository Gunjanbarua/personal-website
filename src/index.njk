<section class="snap-section" id="home" aria-label="Home">
  <div class="hero-bg"></div>
  <div class="section-inner hero-inner">

    <div class="hero-left">
      <div class="hero-eyebrow">
        <span class="eyebrow-dot"></span>
        Open to Collaborations
      </div>
      <h1 class="hero-name">{{ bio.name }}</h1>
      <p class="hero-headline">{{ bio.headline }}</p>
      <p class="hero-bio">{{ bio.bio | safe }}</p>

      <div class="hero-cta">
        <a href="#publications" class="btn btn-primary">View Research</a>
        <a href="#contact" class="btn btn-ghost">Get in Touch</a>
      </div>

      <div class="hero-socials">
        {% if bio.linkedin %}
